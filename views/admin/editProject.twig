{% extends 'defaultAdmin.twig' %}
{% block title 'Editer ' ~ editProject.name %}
{% block mainAdmin %}
    <section class="form-project">
        <h2>Editer un projet</h2>
        <form action="{{ 'editProject'|getUrl ~ '?id=' ~ editProject.id }}" method="post" enctype="multipart/form-data">
            <p>
                <label for="edit-project-name">Nom du projet</label><br>
                <input type="text" id="edit-project-name" name="edit-project-name" value="{{ editProject.name }}" required>
            </p>
            <p>
                <label for="edit-project-description">Description du projet</label><br>
                <input type="text" id="edit-project-description" name="edit-project-description" value="{{ editProject.description }}" required>
            </p>
            <p>
                <label for="edit-project-path">Chemin du projet</label><br>
                <input type="text" id="edit-project-path" name="edit-project-path" value="{{ editProject.path }}" required>
            </p>
            <p>
                <label for="edit-project-image">Choisir une image (350x200)</label><br>
                <input type="file" id="edit-project-image" name="edit-project-image" accept=".png, .jpg, .jpeg">
            </p>
            <p>Image actuelle : <br><img src="{{ editProject.image_path }}" alt="image actuelle du projet"></p>
            <button type="submit">Editer le projet !</button>
        </form>
    </section>
{%  endblock %}